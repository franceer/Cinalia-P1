<section id="product-details-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="asset-img wide-img taller">
                    <a href="#"><img src="<%= product.picture_url %>" alt="<%= product.picture_alt %>" title="<%= product.picture_title %>" /></a>
                </div>
                <% if(typeof contextualInfo != 'undefined'){ %>
                <div class="matching-status <%= contextualInfo.matchingStatus.id === 1 ? 'exact-match' : '' %>">
                    <%= contextualInfo.matchingStatus.name  %>
                </div>
                <% } %>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6">
                        <h1><%= product.brand.name %></h1>
                    </div>
                    <div id="user-actions" class="col-md-3 col-md-offset-3">
                        <a href="#" class="bookmark">
                            <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                            <i class="fa fa-bookmark" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="like">
                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                            <i class="fa fa-heart" aria-hidden="true"></i>
                        </a>
                        <div class="html-tooltip">
                            <i class="fa fa-share-alt" aria-hidden="true"></i>
                            <div class="tooltip-content bottom">
                                <a href="#">
                                    <i class="fa fa-facebook" aria-hidden="true"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-twitter" aria-hidden="true"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-instagram" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12">
						<p class="subtitle"><%= product.name %> - <span class="font-weight-bold"><%= product.price %>€</span></p>					
						<p class="description text-justify"><%= product.description %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<ul>
						<%_product.categories.forEach(function(category){ _%>
							<li class="tag tag-primary"><%= category.name _%></li>
						<%_ });_%>
						</ul>
					</div>
				</div>              
                <% if(typeof media != 'undefined'){ %>
				<div class="row">
					<div class="col-md-12">
						<p class="font-weight-bold as-seen">
							Vu dans <span class="text-important"><%= media.title%></span>
						</p>
						<% if(contextualInfo.appearingContext) {%>
						<p class="description text-justify">
							<%= contextualInfo.appearingContext %>
						</p>
						<%
						}
						_%>
					</div>
				</div>
                <%_ 
				}
                _%>
                <%_ if((product.videoMedias.length > 0 && typeof media === 'undefined') || (product.videoMedias.length > 1 && typeof media !== 'undefined')){ %>
                <div class="row">
					<div class="col-md-12">
						<p>
							A voir<%= typeof media !== 'undefined' ? ' également' : '' %> dans :
							<ul>
								<% for(var l = product.videoMedias.length, i = 0; i < l; i++){
								var videoMedia = product.videoMedias[i];
								if(typeof media != 'undefined' && media.id === videoMedia.id)
								{
									continue;
								}
								%>
								<li>
									<%= videoMedia.title %>
								</li>
								<% } %>
							</ul>
						</p>
					</div>
				</div>
                <% } %>
                <div>
                    <button class="interactive-button">Acheter</button>
                </div>
            </div>
        </div>
    </div>
    <button class="down-button drop-shadow" data-down-to="#similar-products">
        <i class="fa fa-angle-double-down" aria-hidden="true"></i>
    </button>
</section>

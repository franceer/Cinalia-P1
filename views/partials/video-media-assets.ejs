<div id="filtered-assets" class="row">
    <div class="col-md-12">
        <%_
        var newRow = true;
        for(var i = 1; i <= allAssets.length; i++){
        var asset = allAssets[i-1];
        if(newRow){
        _%>
        <div class="row asset-line">
            <%_ newRow = false; } _%>
            <div class="col-md-<%= asset.type === 'product' ? '3' : '4' %> asset-figure">
                <div class="asset-img <%= asset.type === 'location' ? 'wide-img' : '' %>">
                    <a data-modal="true" href="/<%= asset.section_url + '/' + asset.id + '?mediaid=' + videoMediaID _%>"><img src="<%= asset.picture_url _%>" alt="<%= asset.picture_alt _%>" title="<%= asset.picture_title _%>" /></a>
                    <button class="button-overlay red bookmark<%= asset.bookmark_id ? ' bookmarked' : '' _%>" data-object-id="<%= asset.id _%>" data-object-type="<%= asset.type _%>"><%= asset.bookmark_id ? 'SauvegardÃ©' : 'Sauvegarder' _%></button>
                </div>
                <div class="asset-legend drop-shadow">
                    <%_ if(asset.brand_name){ _%>
                    <a data-modal="true" href="/<%= asset.section_url + '/' + asset.id + '?mediaid=' + videoMediaID _%>" class="asset-title"><%= asset.brand_name _%></a>
                    <a data-modal="true" href="/<%= asset.section_url + '/' + asset.id + '?mediaid=' + videoMediaID _%>" class="asset-desc"><%- asset.name _%></a>
                    <%_ } else { _%>
                    <a data-modal="true" href="/<%= asset.section_url + '/' + asset.id + '?mediaid=' + videoMediaID _%>" class="asset-title"><%= asset.name _%></a>
                    <%_ } _%>
                </div>
            </div>
            <%_ if((asset.type === 'product' && (i % 4 === 0 || i === allAssets.length)) || (asset.type === 'location' && (i % 3 === 0 || i === allAssets.length))){ _%>
        </div>
        <%_ newRow = true;} _%>
        <%_ } _%>                
    </div>
</div>
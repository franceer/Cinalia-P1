
/***** PLAYER CAROUSEL *****/
#player-carousel{
    position: relative;
    padding: 0 !important;
    margin-bottom: 30px;
}
#player-carousel>.controls{
    position: absolute;
    width: 100%;
    top: 353px;
}
#player-carousel > .controls > button{
    position: relative;
    transition: opacity .5s ease;
    opacity: .8;   
}
#player-carousel > .controls > button:hover{    
    opacity: 1;
}
#player-carousel > .controls > button:first-child{
    left: -50px;
}
#player-carousel > .controls > button:nth-child(2){
    left: 50px;
}
#player-carousel .row{
    margin: 0;
}
#poster-section{
    display: flex;
    flex-direction: column;
    background-clip: content-box;    
    width: 25%;
}
#date-info{
    background-color: #454242;
    padding-bottom: 15px;   
}
#date-info ul{
    font-size: .8rem;
    padding-left: 15px;
    line-height: 1rem;
    margin-bottom: 0;
}
#date-info li:nth-child(2)
{
    margin-top: 5px;
}
#working-people h2, #date-info h2{    
    font-size: 1rem;    
    padding-left: 15px;  
    margin-bottom: 0;
    text-align: left;
}
#date-info h2{
    font-weight: 500;
}
#working-people {
    flex: 1 0 auto;
    margin-top: 15px;    
    background-color: #f1f1f1;
    padding-bottom: 15px;
}
#working-people ul{
    font-size:.8rem;
}
#working-people .carousel-seat > ul{
    position: relative;
    left: 30px;
}
#working-people .carousel-seat > div {
    width: 100%;
}
#working-people .carousel-seat > div > button{
    border: 0;
    background: none;
    outline: none;
    font-size: 1.5rem;
}
#working-people .carousel-seat > div > a,
#working-people .carousel-seat > div > a:hover,
#working-people .carousel-seat > div >a:visited
{
    text-decoration: none;
    color: #454242;
}
#working-people h2{
    font-weight: 600;
    display: inline-block;
    width: 75%;
}
#working-people h2, #working-people ul{
    color: #454242;
}
#date-info h2, #date-info ul{
    color: white;
}
#all-products{
    background-color: #d9534f;
    flex-grow: 3;
    color: white;
    padding-top: 13%;
}
.video-overlay{
    position: absolute;
    top: 0;
    color: white;
    text-align: center;
    width: 100%;
    height: 345px;
    cursor: pointer;
    display: flex;
    overflow-y: hidden;
    flex-direction: column;
    justify-content: center;
}
.video-overlay i{
    opacity: .8;
    font-size: 10rem;
}
.pagin {
    display: flex;
    background-color: #454242;
    justify-content: center;
    margin: 0;
}
.pagin li{
    flex: 1 0 10%;
    margin: 15px;
}
.pagin a{
    display: block;
}
.pagin .active{
    border-bottom: 5px solid #d9534f;
}
.pagin a:not(.active){
    opacity: .5;
    transition: opacity 500ms ease;
}
.pagin a:not(.active):hover{
    opacity: 1;
}
#player-carousel > .row{
    align-items: center;
}
#player-carousel > .row > button{
    border: 0;
    font-size: 3rem;
    line-height: 9rem;
    outline: none;    
}
#player-carousel > .row > button > i{
    transition: margin 100ms ease-in;
}
#player-carousel > .row > button:nth-child(1):hover > i{
    margin: 0 5px 0 0;
}
#player-carousel > .row > button:nth-child(3):hover > i{
    margin: 0 0 0 5px;
}
.slide-out {
    animation: slide-out 0.5s forwards;
    -webkit-animation: slide-out 0.5s forwards;
}
@keyframes slide-out {
    100% { 
        transform: translateX(110%);
        opacity: 0;
    }
}
.slide-in {
    animation: slide-in 0.5s forwards;
    -webkit-animation: slide-in 0.5s forwards;
}
@keyframes slide-in {
    100% { 
        transform: translateX(0%);
        opacity: 1;
    }
}
.disappear{
    animation: disappear 0.5s forwards;
}
@keyframes disappear {
    100% {        
        opacity: 0;
    }
}
.appear{
    animation: appear 0.5s forwards;
}
@keyframes appear {
    100% {        
        opacity: 1;
    }
}
 /***** HIGHLIGHTS *****/
.highlight{
    margin: 0 auto;
}
.highlight .container, .highlight.container{
    position: relative;
    padding: 0;
}
.highlight.fashion{ 
    background-color: #dbdbdb;
}
.highlight.locations .carousel-seat{
    display: flex;
    justify-content: space-around;
}
.highlight .carousel-seat{
    margin-bottom: 30px;
}
.highlight .carousel-seat div{
    position: relative;
}
.highlight .toggle{
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 175px;
}
.highlight:hover .toggle{
    opacity: 1;
    visibility: visible;
}
.highlight .toggle, .highlight .toggle:focus, .highlight .toggle:active {
    background: #e9e9e9;
    background-clip: content-box;
    border: 0;
    color: #454242;    
    font-size: 2rem;
    text-decoration: none;
    outline: none;
    width: 60px;
    height: 80px;
}
.highlight .toggle[data-toggle=prev]{
    left: -15px;
}
.highlight .toggle[data-toggle=next]{
    right: -15px;
}


/***** CAROUSELS *****/
.wrap {
    overflow: hidden;
}
#video-carousel{
    margin-bottom: 30px;
}
.carousel {
    display: flex;
    left: -100%;
    list-style: none;
    margin: 0;
    padding: 0;
    position: relative;
    transform: translateX(100%);
}
@media (min-width: 40em) {
    .carousel {
        left: -20%;
        transform: translateX(20%);
    } 
    .carousel.full-size{
        left: -100%;
        transform: translateX(100%);
    }   
}
@media (min-width: 40em) {
    .carousel.is-reversing {
        transform: translateX(-20%);
    }   
    .carousel.is-reversing.full-size {
        transform: translateX(-100%);
    }  
}
.carousel.is-set, .carousel.is-set.full-size {
    transform: none;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
}
.carousel-seat {
    padding: 0 15px;
    background-clip: content-box !important;
    flex: 1 0 100%;
    order: 2;
}
@media (min-width: 40em) {
    .carousel-seat {
        flex-basis: 20%;
    }    
    .full-size .carousel-seat {
        flex-basis: 100%;
        background: none;
        padding: 0;
    }
}
.carousel-seat.is-ref {
    order: 1;
}

